<div class="col-md-6">
  <%= form_for @distributor do |f| %>
    <div class="control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="control-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="control-group">
      <%= f.submit "Submit", class: "btn btn-success" %>
    </div>
  <% end %>
</div
