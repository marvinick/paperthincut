<div class="main">
  <%= form_for @good do |f| %>
  <div class="control-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br/>
  <div class="control-group>">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <br/>
  <div class="control-group>">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <hr>
  <%= f.label "Distributors" %>
  <%= f.collection_check_boxes :distributor_ids, Distributor.all, :id, :name do |cb| %>
    <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
    <% end %>
  <%= f.submit(@good.new_record? ? "Add Product" : "Update Product") %>
  <% end %>
</div>