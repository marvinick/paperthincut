<div class="span4 well">
  <%= pie_chart Request.group(:name).count %>
  <h4><%= link_to "Order", distributors_path %></h4>
</div>
<div class="span4 well">
  <%= column_chart Request.group_by_hour_of_day(:created_at, format: "%l %P").count %>
  <h4><%= link_to "Order History", requests_path %></h4>
</div>
<div class="span4 well">
  <%= column_chart Post.group(:title).count %>
  <h4><%= link_to "Notes", posts_path %></h4>
</div>
<div class="span4 well">
  <%= pie_chart User.group(:username).count %>
  <h4><%= link_to "Users", users_path %></h4>
</div>
<div class="span4 well">
  <%= line_chart Item.group(:request_id).count %>
  <h4><%= link_to "Inventories", inventories_path %></h4>
</div>
<div class="span4 well">
  <h4>Products</h4>
  <br/>
  <% @goods.each do |good| %>
    <h4><li><%= link_to good.name, good %></li></h4>
  <% end %>
  <hr>
  <%= link_to "Add Product", new_good_path %>
</div>
