<div class="span5 well">
  <%= form_tag '/login' do %>
  <table>
    <tr>
      <div class="control-group">
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </div>
    </tr>
    <tr>
    <div class="control-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    </tr>
  </table>
    <%= submit_tag 'Login', class: 'btn btn-success' %>
  <% end %>
</div>