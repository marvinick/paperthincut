<div class="span4 well">
  <%= render 'form' %>
</div>
<div class="span4 well">
<table>
  <% @inventories.each do |inventory| %>
    <tr>
      <td><%= link_to inventory.name, @inventory %> </td>
      <td><%= inventory.amount %> </td>
      <td><%= inventory.unit %> </td>
      <td><%= inventory.price %></td>
    </tr>
  <% end %>
  </table>
</div>
<div class="span4 well">
<%= submit_tag "Email", :name => 'email_button' %>
</div>
