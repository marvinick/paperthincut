<div class="span5 well">
<div class="col-md-4">
  <%= form_for @request do |f| %>
  <div class="control-group">
     <%= f.label :name %>
     <%= f.text_field :name %>
  </div>
  <div class="control-group">
    <%= f.label :distributor_id %><br />
    <%= f.collection_select :distributor_id, Distributor.all, :id, :email, include_blank: true %>
  </div>
  <br/>
  <div class="control-group">
    <%= f.submit "Submit", class: "btn btn-success" %>
  </div>
  <% end %>
</div>
</div>