<div class="col-md-6">
  <%= form_for @post, :html => {:multipart => true} do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="control-group">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>
    <div class="control-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div>
     <%= f.file_field :image %>
    </div>
    <div>
     <%= f.input :resource %>
   </div>
    <div>
     <%= f.label :remote_image_url, "or image URL" %>
     <%= f.text_field :remote_image_url %>
    </div>
    <%= f.submit "Submit", class: 'btn btn-success' %>
  <% end %>
</div>