<div class="span5 well">
  <% if notice %>
   <p id="notice"><%= notice %></p>
  <% end %>

  <h4>Order Basket</h4>
  <ul>
    <% @basket.items.each do |item| %>
     <li><%= item.amount %> &times; <%= item.good.name %></li>
    <% end %>
  </ul>
  <br/>
  <%= button_to "Empty Basket", @basket, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

<div class="span5 well">
  <%= form_for(@basket) do |f| %>
    <%= f.label :info %>
    <%= f.text_area :info %>
  <hr>
  <%= f.submit %>
  <% end %>
</div>

